- if @plate.errors.any?
    - for message in @plate.errors.full_messages
        .form_error= message
    %br

=form_for @plate do |f|
    .field
        %div= f.label :reg, "Registration number"
        %div= f.text_field :reg
    .field
        %div= f.label :valid_from
        %div= f.text_field :valid_from
    .field
        %div= f.label :valid_to
        %div= f.text_field :valid_to
    .field
        %div Driver
        %div= f.select :driver_id, @drivers.map { |d| [d.name, d.id] }
    .filed
        %div Vehicle
        %div= f.select :vehicle_id, @vehicles.map { |v| [v.brand + " " + v.model, v.id] }
    .field
        %div= f.submit
