- if @theft.errors.any?
    - for message in @theft.errors.full_messages
        .form_error= message
    %br

= form_for @theft do |f|
    .field
        %div= f.label :when, "When * (YYYY-MM-DD)"
        %div= f.text_field :when
    .field
        %div= f.label :where
        %div= f.text_field :where
    .field
        %div= f.label :vehicle_id, "Vehicle *"
        %div= f.select :vehicle_id, @vehicles.map { |v| [v.fullname, v.id] }
    .field
        %div= f.label :returned
        %div= f.check_box :returned
    .field
        %div= f.submit
