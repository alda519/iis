%h2 Offence detail

%table.table{:width => '100%'}
    %tr
        %td Driver
        %td= link_to @offence.driver.fullname, driver_path(@offence.driver)
    %tr
        %td When
        %td= @offence.when
    %tr
        %td Type
        %td= link_to @offence.offence_type.descr, offence_type_path(@offence.offence_type)
    %tr
        %td Where
        %td= @offence.where
    %tr
        %td Fine
        %td= @offence.fine
    %tr
        %td Description
        %td= @offence.descr


-if @current_user.judge?
    = link_to 'Edit', edit_offence_path(@offence), {class: "btn"}

= link_to 'Back to offences', offences_path, {class: "btn"}
