- if @licence_restrict.errors.any?
    .alert.alert-error
        - for message in @licence_restrict.errors.full_messages
            = message
            %br
    %br

= form_for @licence_restrict, :html => {:class => "form-horizontal"} do |f|
    .control-group
        .control-label= f.label :from, "From * (YYYY-MM-DD)"
        .controls= f.text_field :from
    .control-group
        .control-label= f.label :to
        .controls= f.text_field :to
    .control-group
        .control-label= f.label :descr
        .controls= f.text_field :descr
    .control-group
        .control-label= f.label :driver_id, "Driver *"
        .controls= f.select :driver_id, @drivers.map { |d| [d.fullname, d.id]}
    .control-group
        .controls= f.submit :class => "btn btn-primary"
