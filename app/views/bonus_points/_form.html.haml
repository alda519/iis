- if @bonus_point.errors.any?
    - for message in @bonus_point.errors.full_messages
        .form_error= message
    %br

= form_for @bonus_point do |f|
    .field
        %div= f.label :points, "Points *"
        %div= f.text_field :points
    .field
        %div= f.label :when, "When *"
        %div= f.text_field :when
    .field
        %div= f.label :note
        %div= f.text_field :note
    .field
        %div= f.label :driver_id, "Driver *"
        %div= f.select :driver_id, @drivers.map { |d| [d.fullname, d.id] }
    .field
        %div= f.submit
