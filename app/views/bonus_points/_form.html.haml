- if @bonus_point.errors.any?
    .alert.alert-error
        - for message in @bonus_point.errors.full_messages
            = message
            %br
    %br

= form_for @bonus_point, :html => {:class => "form-horizontal"} do |f|
    .control-group
        .control-label= f.label :points, "Points *"
        .controls= f.text_field :points
    .control-group
        .control-label= f.label :when, "When *"
        .controls= f.text_field :when
    .control-group
        .control-label= f.label :note
        .controls= f.text_field :note
    .control-group
        .control-label= f.label :driver_id, "Driver *"
        .controls= f.select :driver_id, @drivers.map { |d| [d.fullname, d.id] }
    .control-group
        .controls= f.submit :class => "btn btn-primary"
