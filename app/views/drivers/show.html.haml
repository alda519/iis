%h2 Driver Details

%table{:width => '100%'}
    %tr
        %td Name
        %td= @driver.name
    %tr
        %td Surname
        %td= @driver.surname
    %tr
        %td Birth
        %td= @driver.birth
    %tr
        %td Place
        %td= @driver.place
    %tr
        %td National_id
        %td= @driver.national_id
    %tr
        %td Address
        %td= @driver.address

= link_to 'Edit', edit_driver_path(@driver), {class: "btn"}

= link_to "Back to drivers", drivers_path, {class: "btn"}
