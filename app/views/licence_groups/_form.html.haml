- if @licence_group.errors.any?
    - for message in @licence_group.errors.full_messages
        .form_error= message
    %br

= form_for @licence_group do |f|
    .field
        %div= f.label :group
        %div= f.text_field :group
    .field
        %div= f.label :valid_from
        %div= f.text_field :valid_from
    .field
        %div= f.label :valid_to
        %div= f.text_field :valid_to
    .field
        %div= f.label :driver_id
        %div= f.select :driver_id, @drivers.map { |d| [d.fullname, d.id] }
    .field
        %div= f.submit
