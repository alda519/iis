%h2 Insurances

%table{:width => "100%"}
    %tr.thead 
        %th{:width => "60%"} Vehicle
        %th{:width => "20%"} From
        %th{:width => "10%"} Show
        %th{:width => "10%"} Edit
    - @insurances.each_with_index do |d, i|
        %tr{ :class => "#{i%2==0? 'even':'odd'}" }
            %td= d.vehicle.fullname
            %td= d.from
            %td= link_to "Detail", d
            %td= link_to "Edit", edit_insurance_path(d)

%p= link_to "New Insurance", new_insurance_path
