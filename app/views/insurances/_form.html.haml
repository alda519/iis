- if @insurance.errors.any?
    .alert.alert-error
        - for message in @insurance.errors.full_messages
            = message
            %br
    %br

= form_for @insurance, :html => {:class => "form-horizontal"} do |f|
    .control-group
        .control-label= f.label :from, "From (YYYY-MM-DD)"
        .controls= f.text_field :from
    .control-group
        .control-label= f.label :to, "To (YYYY-MM-DD)"
        .controls= f.text_field :to
    .control-group
        .control-label= f.label :vehicle_id, "Vehicle *"
        .controls= f.select :vehicle_id, @vehicles.map { |v| [v.fullname, v.id] }
    .control-group
        .control-label= f.label :note
        .controls= f.text_field :note
    .control-group
        .controls= f.submit :class => "btn btn-primary"
