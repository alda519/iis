= form_for(@offence_type) do |f|
    -if @offence_type.errors.any?
        #error_explanation
            %h3= pluralize(@offence_type.errors.count, "error") + "prohibited this offence_type from being saved:"
            %ul
                -@offence_type.errors.full_messages.each do |msg|
                    %li= msg
    .field
        = f.label :points
        %br
        = f.number_field :points
    .field
        = f.label :fine_from
        %br
        = f.number_field :fine_from
    .field
        = f.label :fine_to
        %br
        = f.number_field :fine_to
    .field
        = f.label :descr
        %br
        = f.text_field :descr
    .field
        = f.submit
